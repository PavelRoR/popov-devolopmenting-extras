#main
	padding 0 0 90px
	min-height calc(100vh - 280px)
	@media screen and (max-width 991px)
		text-align center
		padding 0 0 60px
	@media screen and (max-width 386px)
		padding 0 0 40px
.main
	&-title
		font-size: 24px
		font-weight: bold
		@media screen and (max-width 560px)
			font-size: 20px
		span
			display inline-block
			color #743F3F
	&-text
		font-size: 22px
		margin 30px 0
		@media screen and (max-width 560px)
			font-size: 18px
			margin 20px 0
		span
			font-weight: bold
	&-img
		display block
		width 100%
		max-width 267px
		margin 30px 0 0 auto
		@media screen and (max-width 991px)
			margin 30px auto 0