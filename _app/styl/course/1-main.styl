#main
	padding 0 0 112px
	overflow hidden
	@media screen and (max-width 991px)
		padding 0 0 60px
		text-align center
	@media screen and (max-width 386px)
		padding 0 0 40px
.main
	&-pre
		font-size: 20px
		margin-top: 50px
		@media screen and (max-width 1199px)
			margin-top: 0
		@media screen and (max-width 560px)
			font-size 16px
	&-title
		font-size: 48px
		font-weight: bold
		color #743F3F
		margin 10px 0 50px
		@media screen and (max-width 1199px)
			margin-bottom: 30px
		@media screen and (max-width 560px)
			font-size 38px
		@media screen and (max-width 386px)
			font-size: 28px
	&-info
		position absolute
		bottom: -203px
		left 0
		@media screen and (max-width 991px)
			position: static
		@media screen and (max-width 386px)
			margin-bottom: 10px
		&-text
			text-align left
			display inline-block
			padding 15px 0 30px
			position relative
			font-size: 22px
			color #747474
			@media screen and (max-width 991px)
				padding 15px 30px 30px
				width 220px
				text-align right
			@media screen and (max-width 560px)
				font-size: 20px
			@media screen and (max-width 386px)
				display block
				width 100%
				text-align center
			span
				display block
				color #464646
				&.main-date-time
					position absolute
					font-size: 12px
					color #A7A7A7
					bottom: 10px
					left 0
					@media screen and (max-width 991px)
						right 30px
						left auto
					@media screen and (max-width 386px)
						margin 0 auto
						left 0
						right 0
			&:last-of-type
				margin-left: 108px
				&:before
					content: ''
					display block
					position absolute
					height 100%
					width 1px
					background-color: #747474
					top 0
					left -54px
				@media screen and (max-width 991px)
					margin-left: 0
					text-align: left
					&:before
						left 0
				@media screen and (max-width 386px)
					margin 31px 0 0
					text-align center
					&:before
						width 100%
						max-width 200px
						height 1px
						top -15px
						left 0
						right 0
						margin 0 auto
	&-img
		display block
		width 100%
		max-width 404px
		margin 0 auto
		@media screen and (max-width 991px)
			margin-top: 50px