#get
	padding 100px 0
	background-color: #F4E7DD
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
	.container
		position relative
.get-items
	width 100%
	max-width 760px
	@media screen and (max-width 1199px)
		max-width 600px
	@media screen and (max-width 991px)
		max-width none
	&-buttons
		position relative
		padding 13px 30px
		border-bottom: 2px solid #000
		border-left: 2px solid #000
		display block
		margin-bottom: 30px
		width auto
		@media screen and (max-width 560px)
			padding 10px 20px
		@media screen and (max-width 386px)
			padding 10px 15px
		&:before
			content: ''
			display block
			position absolute
			width 200%
			height: 2px
			background-color: #000
			bottom: -2px
			left -200%
		li
			list-style none
			display inline-block
			font-size: 20px
			font-weight: bold
			margin: 0 20px 10px 0
			@media screen and (max-width 560px)
				font-size: 18px
			&:last-child
				margin-right 0
			a
				display block
				position relative
				color #000
				transition: all .4s ease
				&:hover
					color #743F3F
					text-decoration: underline
			&.active
				a
					color #743F3F
					text-decoration: underline
.get-img
	position absolute
	top -100px
	right -100px
	@media screen and (max-width 1199px)
		right -160px
	@media screen and (max-width 991px)
		display block
		position: static
		width 100%
		max-width 463px
		margin 50px auto 0
	@media screen and (max-width 560px)
		margin-right: -15px
.tab-content > .tab-pane
	display: none;
.tab-content > .active
	display: block;
.get-item
	&-title
		font-size: 20px
		font-weight: bold
		margin 30px
		@media screen and (max-width 560px)
			margin 20px
	&-list
		li
			list-style: none
			position relative
			margin-bottom: 15px
			padding-left: 38px
			@media screen and (max-width 560px)
				padding-left: 22px
			@media screen and (max-width 386px)
				padding-left: 20px
				margin-bottom: 10px
			&:before
				content: ''
				display block
				position absolute
				top 8px
				left 0
				border-radius: 50%
				width 12px
				height: 12px
				border 1px solid #000
				@media screen and (max-width 560px)
					width: 8px
					height: 8px
					top 10px
			span
				font-weight: bold
.get-item-text
	margin-bottom: 20px
.button-get
	margin-top: 50px
	@media screen and (max-width 560px)
		margin-top: 30px