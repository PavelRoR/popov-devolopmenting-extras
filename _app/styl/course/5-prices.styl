#prices
	padding 100px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
	.container
		position relative
.packet
	width 100%
	max-width 380px
	margin 0 auto
	background-color: #F4E7DD
	padding 100px 20px 30px
	background-image: url('../img/images/for.png')
	background-repeat: no-repeat
	background-position: top 30px center
	text-align center
	position relative
	z-index 30
	&-head
		padding-bottom: 40px
		@media screen and (max-width 560px)
			padding-bottom: 30px
		&-title
			font-size: 36px
			font-weight: bold
			color #743f3f
			@media screen and (max-width 560px)
				font-size 30px
			small
				color #000
				display block
				font-size: 16px
				font-weight: normal
		&-text
			margin 10px 0 0
			font-size: 20px
.more-button
	display inline-block
	font-size: 16px
	font-style: italic
	border-bottom: 1px dotted
	opacity .3
	transition all .3s ease
	&:focus
		color #000
		opacity .3
	&:hover
		color #000
		opacity 1
		border-bottom-color: transparent
.cost
	font-size: 28px
	margin-bottom: 15px
	@media screen and (max-width 560px)
		font-size 26px
		margin-bottom: 10px
	span
		display block
		font-size: 38px
		font-weight: bold
		@media screen and (max-width 560px)
			font-size 32px
	&-full
		span
			text-decoration line-through
			&.unbroken
				text-decoration: none
	&-sale
		color red
	&-today
		color limegreen
		margin-bottom: 30px
.prepayment
	margin 50px 0 35px
	text-align center
	@media screen and (max-width 560px)
		margin 30px 0 20px
	&-title
		font-size: 38px
		font-weight: bold
		color red
		@media screen and (max-width 560px)
			font-size 32px
	&-text
		font-size 20px
		margin 20px 0 30px
		@media screen and (max-width 560px)
			font-size 18px
			margin: 15px 0 20px
		span
			display inline-block
			font-weight: bold
.timer-title
	font-size: 36px
	font-weight: bold
	line-height: 1.2
	text-align center
	color red
	@media screen and (max-width 560px)
		font-size 32px
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #743f3f
	box-shadow: none
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #743f3f
	text-shadow: none
	border-radius: 0
.flip-clock-wrapper .flip
	box-shadow: none
.flip-clock-wrapper ul li a div.down
	border-radius: 0
.prices-img
	position absolute
	z-index 0
	@media screen and (max-width 991px)
		position: static
		display block
		margin 0 auto
		width 100%
		max-width 267px
.prices-img.prices-img-1
	top 80px
	left 0
	@media screen and (max-width 991px)
		margin-bottom: 40px
.prices-img.prices-img-2
	top auto
	bottom 80px
	right 0
	@media screen and (max-width 991px)
		margin-top: 40px
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px