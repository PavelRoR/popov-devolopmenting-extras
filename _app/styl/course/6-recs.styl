#recs
	padding 40px 0 100px
	@media screen and (max-width 991px)
		padding 40px 0 60px
	@media screen and (max-width 386px)
		padding 40px 0
.rec
	width 100%
	max-width 650px
	margin 0 auto 40px
	@media screen and (max-width 560px)
		margin-bottom: 30px
	&-title
		font-size 20px
		font-weight: bold
		margin-bottom: 15px
	&-text
		margin-top: 10px
	&s-text
		text-align center
		font-size 22px
		font-weight: bold
		@media screen and (max-width 386px)
			font-size 20px
		&-2
			font-weight: normal
			margin-bottom: 30px
			text-align center