*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: R
	color #000
	background-color #fff
	line-height: 1.56
.wrapper
	overflow hidden
.content
	position relative
	z-index 60
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #2B2B2B
	width: auto
	background-color: transparent
	font-family: NS
	font-size: 20px
	font-weight: bold
	border-left: 2px solid #2B2B2B
	border-bottom: 2px solid #2B2B2B
	padding: 15px
	transition: all .5s ease-in-out
	position relative
	overflow hidden
	&:focus
		text-decoration none
		color #2B2B2B
	&:before
		content: ''
		display block
		width 100%
		height: 2px
		background-color: #2B2B2B
		position absolute
		top 0
		left -100%
		transition: all .4s ease
	&:after
		content: ''
		display block
		height: 100%
		width: 2px
		background-color: #2B2B2B
		position absolute
		top 100%
		right 0
		transition: all .4s ease
	&:hover
		transition-delay: .4s
		text-decoration none
		color #fff
		background-color: #743F3F
		&:before
			left 0
		&:after
			top 0
	&-brown
		background-color: #743F3F
		color #fff
		padding 18px 50px
		border 0
		border 2px solid transparent
		&:before
		&:after
			content: none
		&:focus
			color #fff
		&:hover
			transition-delay: 0s
			background-color #fff
			color #2B2B2B
			border-color: #2B2B2B
	&-wrapper
		position relative
		overflow hidden
		&-center
			text-align center