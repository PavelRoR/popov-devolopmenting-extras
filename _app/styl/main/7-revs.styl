#revs
	padding 100px 0 60px
	@media screen and (max-width 991px)
		padding 60px 0 20px
	@media screen and (max-width 560px)
		padding 60px 0 40px
	@media screen and (max-width 386px)
		padding 40px 0 20px
.text-rev-link
	display block
	width 100%
	max-width 600px
	margin 0 auto 40px
	position relative
	padding 15px
	&:hover
		&:before
			top -10px
			left -10px
		&:after
			opacity 1
	&:before
		content: ''
		display block
		position absolute
		width 100px
		height: 100px
		border-left: 1px solid #000
		border-top: 1px solid #000
		left 0
		top 0
		transition all .3s ease-in-out
	&:after
		content: ''
		position absolute
		width 100%
		height: 100%
		top 0
		left 0
		background-color: rgba(0,0,0,.4)
		background-image: url(../img/icons/zoom.png)
		background-repeat: no-repeat
		background-position: center
		transition all .3s ease-in-out
		opacity 0
	@media screen and (max-width 767px)
		margin-bottom: 30px
		&:before
			height 50px
			width 50px
.text-rev-img
	display block
	width 100%
	height: 165px
	object-fit: contain
	object-position: center top
	@media screen and (max-width 1199px)
		height: 134px
	@media screen and (max-width 991px)
		height: auto
.video-revs
	margin-top: 90px
	@media screen and (max-width 991px)
		margin-top: 50px
	@media screen and (max-width 560px)
		margin-top: 30px
.video-wrapper-rev
	width 100%
	max-width 560px
	margin 0 auto 40px
	@media screen and (max-width 560px)
		margin-bottom: 20px
.yt-button
	position absolute
	cursor pointer
	left: calc(50% - 34px);
	top: calc(50% - 24px);
	&:before
		content: ''
		display block
		position: absolute;
		// left: calc(50% - 34px);
		// top: calc(50% - 124px);
		width: 68px;
		height: 48px;
		border-radius 7px
		background-color: rgba(0,0,0,.7)
		transition: all .15s ease
		z-index 68
		@media screen and (max-width 560px)
			background-color: #FF0000
	&:hover
		&:before
			background-color: #FF0000
	&:after
		content: ''
		display block
		position absolute
		border: 10px solid transparent;
		border-left: 18px solid #fff
		width 10px
		height 10px
		// left: calc(50% - 8px);
		// top: calc(50% - 110px);
		left: 27px
		top: 15px
		z-index 70